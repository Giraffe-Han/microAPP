/**pages/repair/repair.wxss**/
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  background: white;
  padding: 40rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.actions {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.actions button {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.orders {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
}

.orders-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.order-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-item {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 30rpx;
  border-left: 6rpx solid #3cc51f;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-id {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.order-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
}

.status-pending {
  background-color: #ff9500;
}

.status-repairing {
  background-color: #007aff;
}

.status-completed {
  background-color: #34c759;
}

.status-picked {
  background-color: #8e8e93;
}

.order-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.order-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.device-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.create-time {
  font-size: 24rpx;
  color: #666;
}

.order-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.progress-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-top: 10rpx;
}

.progress-bg {
  flex: 1;
  height: 8rpx;
  background-color: #e9ecef;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #3cc51f;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  min-width: 60rpx;
  text-align: right;
}

.empty {
  text-align: center;
  padding: 80rpx 20rpx;
  color: #666;
}

.empty text {
  display: block;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.empty button {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}
