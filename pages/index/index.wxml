<!--pages/index/index.wxml-->
<view class="container">
  <!-- 背景图片 -->
  <image class="background-image" src="/images/无人机背景图.jpg" mode="aspectFill"></image>
  <!-- 顶部导航栏 -->
  <view class="top-bar">
    <view class="logo-section">
      <image class="company-logo" src="/images/logo.png" mode="aspectFit"></image>
    </view>
    <view class="search-bar">
      <view class="search-input">
        <text class="search-icon">🔍</text>
        <text class="search-placeholder">  搜索功能</text>
      </view>
    </view>
  </view>

  <!-- 主要服务区域 -->
  <view class="main-services">
    <view class="main-services-grid">
      <view 
        class="main-service-item" 
        wx:for="{{mainServices}}" 
        wx:key="id"
        data-service="{{item}}"
        bindtap="onServiceTap"
      >
        <view class="main-service-icon">
          <text class="main-icon-emoji">{{item.icon}}</text>
        </view>
        <text class="main-service-name">{{item.name}}</text>
      </view>
    </view>
  </view>

  <!-- 次要服务区域 -->
  <view class="secondary-services">
    <text class="services-title">更多服务</text>
    <view class="secondary-services-grid">
      <view 
        class="secondary-service-item" 
        wx:for="{{secondaryServices}}" 
        wx:key="id"
        data-service="{{item}}"
        bindtap="onServiceTap"
      >
        <view class="secondary-service-icon">
          <text class="secondary-icon-emoji">{{item.icon}}</text>
        </view>
        <text class="secondary-service-name">{{item.name}}</text>
      </view>
    </view>
  </view>

  <!-- 资讯公告区域 -->
  <view class="info-section">
    <view class="info-header">
      <text class="info-title">资讯公告</text>
      <text class="info-more">更多 ></text>
    </view>
    <view class="info-content">
      <text class="info-item">无人机服务收费标准的通知</text>
      <text class="info-item">平台功能升级公告</text>
    </view>
  </view>

  <!-- 快捷功能卡片 -->
  <view class="quick-cards">
    <view class="card-item">
      <view class="card-icon">
        <text class="card-icon-emoji">🔧</text>
      </view>
      <view class="card-content">
        <text class="card-title">维修服务</text>
        <text class="card-subtitle">在线预约</text>
      </view>
    </view>
    <view class="card-item">
      <view class="card-icon">
        <text class="card-icon-emoji">🎓</text>
      </view>
      <view class="card-content">
        <text class="card-title">培训服务</text>
        <text class="card-subtitle">专业指导</text>
      </view>
    </view>
  </view>

  <view class="footer">
    <view class="footer-logo">
      <image class="footer-logo-img" src="/images/logo.png" mode="aspectFit"></image>
    </view>
    <text class="footer-text">交运集团低空经济发展有限公司</text>
    <text class="footer-version">v1.00 {{version}}</text>
  </view>
</view>
