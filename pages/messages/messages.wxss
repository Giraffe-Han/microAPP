/**pages/messages/messages.wxss**/
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  background: white;
  padding: 40rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.messages-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.message-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.message-item.unread {
  border-left: 6rpx solid #ff9500;
}

.message-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.message-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.message-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.unread-dot {
  width: 16rpx;
  height: 16rpx;
  background: #ff9500;
  border-radius: 50%;
}

.message-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.message-time {
  font-size: 24rpx;
  color: #999;
}

.empty {
  text-align: center;
  padding: 100rpx 20rpx;
  color: #999;
  font-size: 28rpx;
}
